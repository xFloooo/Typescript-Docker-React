{
  "name": "typescript-webpack4-react",
  "version": "1.0.0",
  "description": "server and client",
  "readmeFilename": "README.md",
  "scripts": {
    "start": "npm run serve",
    "serve": "NODE_ENV=production node --harmony dist/index.js",
    "build": "npm run build-ts && npm run build-frontend",
    "build-ts": "tsc",
    "build-frontend": "webpack --config ./webpack.config.production.js --mode production --progress --profile --colors",
    "dev": "npm i && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --ignore dist/frontend --harmony dist/index.js",
    "watch-ts": "tsc -w",
    "test": "jest --forceExit"
  },
  "devDependencies": {
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "concurrently": "^3.5.1",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.14.11",
    "react-hot-loader": "^4.3.0",
    "typescript": "2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.37",
    "@types/nconf": "0.0.36",
    "@types/serve-static": "^1.13.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "express": "^4.15.5",
    "nconf": "^0.10.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2"
  }
}
